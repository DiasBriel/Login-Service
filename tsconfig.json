{
  "compilerOptions": {
    "target": "es2016", 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "lib": ["es5", "es6", "ES2018"],              
    "module": "CommonJS",                                
    "rootDir": "./",     
    "outDir": "./dist",                             
    "types": ["reflect-metadata", "jest"],                            
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,
    "strict": false,               
    "skipLibCheck": true,    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]                 
}
